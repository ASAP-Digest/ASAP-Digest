!.gitignore
!.cursorignore
!.editorconfig
!.phpcs.xml.dist
!.env.example
!README.md
!CHANGELOG.md
!composer.json
!wp-config-sample.php

# track favicon files, if they exist
!android-chrome-*.png
!apple-touch-icon*.png
!browserconfig.xml
!favicon*.png
!favicon*.ico
!manifest.json
!mstile-*.png
!safari-pinned-tab.svg
!site.webmanifest

