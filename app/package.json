{
  "name": "app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 5173",
    "build": "NODE_ENV=production vite build",
    "preview": "vite preview --port 4173",
    "start": "node build/index.js",
    "dev:pwa": "vite dev --port 5173 --host",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "build:prod": "NODE_ENV=production VITE_APP_ENV=production vite build",
    "build:analyze": "NODE_ENV=production VITE_APP_ENV=production vite build --mode analyze",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:auth": "node scripts/test-auth.js",
    "test:auth:connection": "node scripts/test-auth-connection.js"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.2.5",
    "@lucide/svelte": "^0.483.0",
    "@melt-ui/pp": "^0.3.0",
    "@playwright/test": "^1.51.1",
    "@sveltejs/adapter-auto": "^5.0.0",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.20.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.0.15",
    "@types/mysql": "^2.15.27",
    "@types/node": "^22.14.1",
    "bits-ui": "^0.22.0",
    "clsx": "^2.1.1",
    "cssnano": "^7.0.6",
    "dotenv-cli": "^8.0.0",
    "esm-env": "^1.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rollup": "^4.36.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "svelte": "^5.25.2",
    "svelte-check": "^4.1.5",
    "svelte-radix": "^2.0.1",
    "svelte-sequential-preprocessor": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.0.15",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "vite-plugin-environment": "^1.1.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.772.0",
    "@huggingface/transformers": "^3.4.0",
    "@stripe/stripe-js": "^6.1.0",
    "@tailwindcss/cli": "^4.0.15",
    "@tailwindcss/postcss": "^4.0.15",
    "@urql/svelte": "^4.2.3",
    "better-auth": "1.2.5",
    "dotenv": "^16.4.7",
    "kysely": "^0.27.6",
    "mysql2": "^3.14.0",
    "radix-svelte": "^0.9.0",
    "svelte-chart": "^1.0.0",
    "svelte-dnd-action": "^0.9.60",
    "vite-plugin-mkcert": "^1.17.8",
    "web-push": "^3.6.7",
    "workbox-window": "^7.3.0"
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ],
    "../docs/ROADMAP_TASKS.md": [
      "node ../generate-todotxt.js",
      "git add ../docs/todotasks.txt"
    ]
  }
}
